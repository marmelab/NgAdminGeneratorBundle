<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Acme\FooBundle\Entity\Post" table="Post">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="title" type="string" column="title" length="255" precision="0" scale="0" nullable="false"/>
    <field name="body" type="text" column="body" precision="0" scale="0" nullable="false"/>
    <one-to-many field="comments" target-entity="Lemon\RestDemoBundle\Entity\Comment" mapped-by="post">
      <cascade>
        <cascade-all/>
      </cascade>
    </one-to-many>
    <many-to-many field="tags" target-entity="Acme\FooBundle\Entity\Tag">
      <join-table name="Post_Tag">
        <join-columns>
          <join-column name="post_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="tag_id" referenced-column-name="id" nullable="1"/>
        </inverse-join-columns>
      </join-table>
      <cascade>
        <cascade-all/>
      </cascade>
    </many-to-many>
  </entity>
</doctrine-mapping>
